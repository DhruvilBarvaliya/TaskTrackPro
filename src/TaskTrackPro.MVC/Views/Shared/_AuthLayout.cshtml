    <style>
        /* General Styling */
.form-group {
    font-family: 'Poppins', sans-serif;
    margin-bottom: 15px;
}

/* Label Styling */
.form-group label {
    font-size: 14px;
    font-weight: 600;
    color: #333;
    margin-bottom: 5px;
    display: block;
}

/* Dropdown Container */
.custom-dropdown {
    position: relative;
    display: inline-block;
    width: 100%;
}

/* Select Box Styling */
.custom-dropdown select {
    width: 100%;
    padding: 10px 15px;
    font-size: 16px;
    font-weight: 500;
    color: #333;
    background-color: #f8f9fa;
    border: 2px solid #007bff;
    border-radius: 8px;
    appearance: none; /* Removes default browser styles */
    cursor: pointer;
    outline: none;
    transition: all 0.3s ease-in-out;
}

/* Hover & Focus Effects */
.custom-dropdown select:hover {
    background-color: #e9f2ff;
}

.custom-dropdown select:focus {
    border-color: #0056b3;
    box-shadow: 0 0 8px rgba(0, 91, 187, 0.5);
}

/* Custom Arrow */
.custom-dropdown::after {
    content: 'â–¼';
    font-size: 12px;
    color: #007bff;
    position: absolute;
    top: 50%;
    right: 15px;
    transform: translateY(-50%);
    pointer-events: none;
}

